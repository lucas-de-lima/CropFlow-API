						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"Corn\",\n    \"plantedArea\": 25.0,\n    \"plantedDate\": \"{{planted_date}}\",\n    \"harvestDate\": \"{{harvest_date}}\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/farms/{{farm_id}}/crops",
							"host": ["{{base_url}}"],
							"path": ["farms", "{{farm_id}}", "crops"]
						}
					}
				},

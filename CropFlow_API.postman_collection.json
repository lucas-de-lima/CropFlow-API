		{
			"name": "3. Crops",
			"item": [
				{
					"name": "Create Crop (as ADMIN)",
					"event": [
						{
							"listen": "prerequest",
							"script": {
								"exec": [
									"// Generate dates for crop",
									"const today = new Date().toISOString();",
									"const harvestDate = new Date();",
									"harvestDate.setDate(harvestDate.getDate() + 90);",
									"pm.environment.set(\"planted_date\", today);",
									"pm.environment.set(\"harvest_date\", harvestDate.toISOString());"
								],
								"type": "text/javascript"
							}
						},
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200 || pm.response.code === 201) {",
									"    const jsonData = pm.response.json();",
									"    pm.environment.set(\"crop_id\", jsonData.id);",
									"    console.log(\"Crop ID saved:\", jsonData.id);",
									"}"
								],
								"type": "text/javascript"
							}
						}
